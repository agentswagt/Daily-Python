def div(a, b):
    try:
        return a/b
    except ZeroDivisionError:
        print("Cannot Divided By Zero")
    except TypeError:
        print("Unsupported Type. Did you use string?")


print(div(10, 2))
print(div(3, 0))
print(div(9, 3))
print(div("12", 3))
"""
import io
file_name = "file.txt"
mode = "r"

try:
    with open(file_name, mode) as fp:
        content = fp.read()
        print(content)
except FileNotFoundError:
    print(f"{file_name} is not found. Please check if the file name's is correct")
except io.UnsupportedOperation:
    print(f"Are u sure? {file_name} is readable?")